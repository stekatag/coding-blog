---
// library import
import { Image } from "@astrojs/image/components"

// utils import
import { slugify, formatDate } from "../js/utils"

const { category, title, author, date, image } = Astro.props
---

<header>
	<div class="container">
		<small>
			<a class="badge" href={`/category/${slugify(category)}/`}>{category}</a>
		</small>
		<h2 class="h2">{title}</h2>
		<p>
			by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
				formatDate(date)
			}
		</p>
	</div>
	<Image
		src={image.src}
		alt={image.alt}
		width="1200"
		height="600"
		format="webp"
		fit="cover"
		quality={60}
		aspect-ratio="5:2"
		class="hero-image"
	/>
</header>
